#include <iostream>
#include <vector>
#include <queue>
#include <climits> 
using namespace std;

class Solution {
public:
    vector<int> dijkstra(int V, vector<vector<int>> &edges, int src) {
     
        vector<vector<pair<int, int>>> adj(V);
        for (auto &it : edges) {
            int u = it[0];
            int v = it[1];
            int w = it[2];
            adj[u].push_back({v, w});
        }

        // Min-heap: {distance, node}
        priority_queue<pair<int, int>, vector<pair<int, int>>, greater<pair<int, int>>> pq;
        vector<int> ans(V, INT_MAX);
        ans[src] = 0;
        pq.push({0, src});

        while (!pq.empty()) {
            auto [dist, node] = pq.top();
            pq.pop();

            for (auto &[n, d] : adj[node]) {
                if (dist + d < ans[n]) {
                    ans[n] = dist + d;
                    pq.push({ans[n], n});
                }
            }
        }

        return ans;
    }
};

// Optional: test driver
int main() {
    Solution sol;
    int V = 5;
    vector<vector<int>> edges = {
        {0, 1, 2},
        {0, 4, 1},
        {1, 2, 3},
        {4, 2, 2},
        {2, 3, 6}
    };
    int src = 0;

    vector<int> dist = sol.dijkstra(V, edges, src);
    for (int d : dist) {
        cout << d << " ";
    }
    cout << endl;
    return 0;
}
